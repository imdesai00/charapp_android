<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistrationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="@color/black"
            android:fontFamily="@font/spartan_bold"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>


        <EditText
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edtext_shape"
            android:padding="10dp"
            android:hint="name"
            android:textColor="@color/black"
            android:fontFamily="@font/spartan_regular"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"></EditText>


        <EditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edtext_shape"
            android:padding="10dp"
            android:hint="email address"
            android:textColor="@color/black"
            android:fontFamily="@font/spartan_regular"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"></EditText>


        <EditText
            android:id="@+id/reg_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edtext_shape"
            android:padding="10dp"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:fontFamily="@font/spartan_regular"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"></EditText>


        <EditText
            android:id="@+id/reg_cpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edtext_shape"
            android:padding="10dp"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:fontFamily="@font/spartan_regular"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"></EditText>


        <TextView
            android:id="@+id/btn_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign Up"
            android:background="@drawable/sign_in_btn"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/spartan_bold"
            android:textSize="14dp"
            android:textColor="@color/white"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alwredy Account  "
            android:textSize="16dp"
            android:fontFamily="@font/spartan_regular"></TextView>
        <TextView
            android:id="@+id/txt_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign in"
            android:textSize="16dp"
            android:textColor="@color/primary_purple"
            android:fontFamily="@font/spartan_bold"></TextView>

    </LinearLayout>


</RelativeLayout>