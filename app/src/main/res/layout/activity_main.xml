<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="@color/primary_purple">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/logo_splash"></ImageView>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chatapp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/spartan_bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="You Can Chat With Your Favourite Person \n Any Time Any Where....."
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/spartan_thin"></TextView>

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"></ProgressBar>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Design By"
            android:fontFamily="@font/spartan_thin"
            android:textColor="@color/white"
            android:gravity="center"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOBUDY"
            android:fontFamily="@font/spartan_regular"
            android:textColor="@color/white"
            android:gravity="center"></TextView>

    </LinearLayout>
</RelativeLayout>